{
    "name": "Project-Epoch-Zero",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/astral-sh/devcontainer-features/uv:1": {
            "version": "latest"
        }
    },
    "updateContentCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake git",
    "postCreateCommand": "bash .devcontainer/setup_env.sh",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ]
        }
    }
}